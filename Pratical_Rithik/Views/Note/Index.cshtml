
@{
    ViewBag.Title = "Index";
}

@section scripts {

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/knockout-3.5.0.js"></script>
    <script src="~/Scripts/ViewModel/NoteViewModel.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //ko.applyBindings(NoteViewModel, document.getElementById('Notes'));
            NoteViewModel.Init();

        });
    </script>
}

<div class="container-fluid" id="Notes">
    <div class="col-md-12">
        <div class="panel" style="height: 50px;background-color:beige; font-size:30px;">
            <span>G Note</span>
        </div>
    </div>
    <div class="col-md-4">
        <div data-bind="foreach: Notes">
            <div class="panel">
                <label data-bind="text: title, click: function () { NoteViewModel.UpdateInfo($data); }"></label><br />
                <span data-bind="text: body, click: function () { NoteViewModel.UpdateInfo($data); } "></span>
                <span data-bind="click: function () { NoteViewModel.DeletNote($data.id); }" style="float:right; cursor:pointer;">X</span>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label>Title</label>
            <input type="text" data-bind="value: title" class="form-control" />
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea data-bind="value: body" class="form-control"> </textarea>
        </div>
        <div>
            <input type="button" value="Add" data-bind="click: function () { NoteViewModel.id() > 0 ? NoteViewModel.UpdateNote() : NoteViewModel.AddNote() }" class="btn btn-default" />
        </div>
    </div>
</div>

